<%= link_to 'Home', root_url %>
<%= link_to 'Signup', signup_path %>
<%= link_to 'Login', login_path %>
<%= link_to 'Logout', logout_path, method: :delete %>

<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %>
        <div>
          <div>
            <%= link_to task.user.name, user_path(task.user) %>
            <span>posted at <%= task.created_at %></span>
          </div>
          <div>
            <p><%= task.status %></p>
            <p><%= task.content %></p>
          </div>
        </div>
        
      </li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの投稿', new_task_path %>

<% else %>
  <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path %>
    </div>
  </div>
<% end %>

